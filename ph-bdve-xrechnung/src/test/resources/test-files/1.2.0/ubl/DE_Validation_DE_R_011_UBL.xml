<?xml version="1.0" encoding="UTF-8"?>
<testSet xmlns="http://difi.no/xsd/vefa/validator/1.0"
  configuration="peppolbis-en16931-base-3.0-ubl">
  <assert>
    <description>For German suppliers, the element „Deliver to post code“ (BT-78) must be provided if the Group „DELIVER TO ADDRESS“ (BG-15) is delivered.</description>
    <scope>DE-R-011</scope>
  </assert>  
  <test>
    <assert>
      <success>DE-R-011</success>
    </assert>
    <Invoice
      xmlns:cac="urn:oasis:names:specification:ubl:schema:xsd:CommonAggregateComponents-2"
      xmlns:cbc="urn:oasis:names:specification:ubl:schema:xsd:CommonBasicComponents-2">
      <cac:AccountingSupplierParty>
        <cac:Party>          
          <cac:PostalAddress>           
            <cac:Country>
              <cbc:IdentificationCode>DE</cbc:IdentificationCode>
            </cac:Country>
          </cac:PostalAddress>                    
        </cac:Party>
      </cac:AccountingSupplierParty>
      <cac:Delivery>
        <cac:DeliveryLocation>
          <cac:Address>
            <cbc:CityName>Schulungsort</cbc:CityName>
            <cbc:PostalZone>12345</cbc:PostalZone>
            <cac:Country>
              <cbc:IdentificationCode>DE</cbc:IdentificationCode>
            </cac:Country>
          </cac:Address>
        </cac:DeliveryLocation>        
      </cac:Delivery>
    </Invoice>
  </test>
  <test>
    <assert>
      <error>DE-R-011</error>
    </assert>
    <Invoice
      xmlns:cac="urn:oasis:names:specification:ubl:schema:xsd:CommonAggregateComponents-2"
      xmlns:cbc="urn:oasis:names:specification:ubl:schema:xsd:CommonBasicComponents-2">
      <cac:AccountingSupplierParty>
        <cac:Party>          
          <cac:PostalAddress>           
            <cac:Country>
              <cbc:IdentificationCode>DE</cbc:IdentificationCode>
            </cac:Country>
          </cac:PostalAddress>                    
        </cac:Party>
      </cac:AccountingSupplierParty>
      <cac:Delivery>
        <cac:DeliveryLocation>
          <cac:Address>
            <cbc:CityName>Schulungsort</cbc:CityName>            
            <cac:Country>
              <cbc:IdentificationCode>DE</cbc:IdentificationCode>
            </cac:Country>
          </cac:Address>
        </cac:DeliveryLocation>        
      </cac:Delivery>
    </Invoice>
  </test>
</testSet>